<h3 >Search Results</h3>

<a class="italic-text" href="../inventory">back to Inventory</a>

<% if @albums.length() > 0 %>

  <table class="big-table">
    <tr>
      <th>ID</th>
      <th>Album</th>
      <th>Artist</th>
      <th>Markup %</th>
      <th>Stock Level</th>
      <th></th>
    </tr>

    <% for album in @albums %>

      <% unless album.stock_level == 'out of stock' %>

        <tr>
          <td><%= album.id %> </td>
          <td class="italic-text">
            <a class="no-underline" href="/albums/<%= album.id %>"><%= album.title %></a>
          </td>
          <td><a href="/artists/<%= album.artist_id %>"><%= Artist.find_by_id(album.artist_id).name %></a></td>
          <td class="center-text"><%= album.markup %></td>
          <td class="center-text
            <%= $stock_style_classes[album.stock_level] %>">
            <%= album.stock_level %>
          </td>
          <td class="center-text"><a href="/albums/<%= album.id %>">More Info</a></td>
        </tr>

      <% end %>

    <% end %>

  </table>

<% else %>

  <p>No Results</p>

<% end %>

<form class="search_form no-padding no-margin" method="post" action="/inventory/search">
  <label class="no-bottom-space" for="search_term">Search Albums:</label>
  <input class="no-bottom-space" type="text" name="term">
  <input type="submit" value="Search">
</form>
